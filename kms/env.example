# CrossmintAppAuth Environment Variables
# Copy this file to .env and fill in your values

# ============================================================================
# DEPLOYMENT CONFIGURATION
# ============================================================================

# Required: Application ID (40-character hex string)
APP_ID=0x1234567890123456789012345678901234567890

# Optional: Initial admin address (defaults to deployer if not set)
INITIAL_ADMIN=0x1234567890123456789012345678901234567890

# Optional: Disable upgrades after deployment (default: false)
DISABLE_UPGRADES=false

# Optional: Allow any device or restrict to specific devices (default: true)
ALLOW_ANY_DEVICE=true

# Optional: Test compose hash to add after deployment
TEST_COMPOSE_HASH=0x1234567890123456789012345678901234567890123456789012345678901234
TEST_COMPOSE_REASON="Initial test compose hash"

# ============================================================================
# MANAGEMENT OPERATIONS
# ============================================================================

# Required for add-hash, add-device, upgrade commands
PROXY_ADDRESS=0x1234567890123456789012345678901234567890

# Required for add-hash command
COMPOSE_HASH=0x1234567890123456789012345678901234567890123456789012345678901234
TAG="v1.2.3"

# Required for add-device command
DEVICE_ID=0x1234567890123456789012345678901234567890123456789012345678901234

# ============================================================================
# AUTHENTICATION (choose one)
# ============================================================================

# Option 1: Private key
PRIVATE_KEY=0x1234567890123456789012345678901234567890123456789012345678901234

# Option 2: Mnemonic phrase
# MNEMONIC="word1 word2 word3 word4 word5 word6 word7 word8 word9 word10 word11 word12"

# ============================================================================
# NETWORK RPC URLS (optional - defaults provided)
# ============================================================================

# Layer 2 networks
BASE_RPC_URL=https://mainnet.base.org
BASE_SEPOLIA_RPC_URL=https://sepolia.base.org


# ============================================================================
# BLOCK EXPLORER API KEYS (for contract verification)
# ============================================================================

# Layer 2 networks
BASESCAN_API_KEY=your_basescan_api_key

# ============================================================================
# AUTOMATION (optional)
# ============================================================================

# Skip confirmation prompts (useful for CI/CD)
AUTO_CONFIRM=false

# CI environment flag
CI=false 